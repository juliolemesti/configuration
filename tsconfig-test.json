{
  "compilerOptions": {
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "target": "es5",
    "experimentalDecorators": true,
    "sourceMap": false,
    "declaration": false,
    "removeComments": true,
    "outDir": "dist/test",
    "moduleResolution": "node",
    "paths": {
     "@ramonornela/configuration": ["./dist/esm/"]
    },
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "include": [
    "test/**/*.ts"
  ],
  "angularCompilerOptions": {
    "strictMetadataEmit": true
  }
}
